---
import Card, { type Props as CardProps } from "../components/Card.astro";

import faradgangLogo from "../assets/faradgang_logo_small_bg.svg";
import polygogoImg from "../assets/polygogo.jpg";
import beamformImg from "../assets/beamform_s.jpg";
import convolverImg from "../assets/convolver_s.jpg";
import dokoButlerImg from "../assets/doko_butler.png";
import sfaImg from "../assets/sfa.jpg";
import polygonImg from "../assets/polygon.jpg";
import shftImg from "../assets/shft.jpg";
import hapticwaveImg from "../assets/hapticwave.jpg";
import colorationImg from "../assets/wfs_coloration_s.jpg";
import mathesis from "../assets/hohnerlein2016_ma_thesis_beamforming_CTC.pdf";
import bathesis from "../assets/hohnerlein2013_ba_thesis_wfs_coloration.pdf";

const projects: CardProps[] = [
  {
    date: "2020-10",
    title: "Faradgang Berlin e.V.",
    href: "https://faradgang.berlin",
    body: "Non-profit Bike NGO that fixes bikes for and with people in need.",
    image: faradgangLogo,
    imageAlt:
      "Childishly drawn bicycle with the words FARADGANG e.V. underneath.",
  },
  {
    date: "2019-06",
    title: "E-RM Polygogo",
    href: "https://www.e-rm.de/2019/09/04/polygogo-release/",
    body: "Digital oscillator for Eurorack, based on Polygon Waveform Synthesis. Built by friends @E-RM.",
    image: polygogoImg,
    imageAlt:
      "Top-down image of an almost square electronic instrument. The top-right quarter is a screen showing a deformed triangle, with some buttons and knobs underneath; the left half is filled with vertical sliders.",
  },
  {
    date: "2019-01",
    title: "Doppelkopf Score Tracker",
    href: "https://chohner.github.io/doppelkopf-score-tracker/",
    body: "Progressive Web App that keeps score during a game of Doppelkopf, built in React.",
    image: dokoButlerImg,
    imageAlt: "A screenshot of an website that keeps score of 4 players",
  },
  {
    date: "2018-09",
    title: "Granular Convolver",
    href: "http://daily.redbullmusicacademy.com/2018/09/the-granular-convolver/",
    body: "Helped build 100 hand-held convolver for the 20th anniversary of the Red Bull Music Academy.",
    image: convolverImg,
    imageAlt:
      "An large number of metallic devices, layed out in an orderly pattern. Each has a large knob at the bottom, 4 buttons and a horizontal slider at the top.",
  },
  {
    date: "2017-06",
    title: "Sound Field Analysis Toolbox",
    href: "https://github.com/AppliedAcousticsChalmers/sound_field_analysis-py/",
    body: "Analyze, visualize and process sound field data recorded by spherical microphone arrays. Python port of the SOFiA Matlab toolbox, now developed at Chalmers University.",
    image: sfaImg,
    imageAlt:
      "A computer plot, showing the sensitivity pattern of a microphone as a multi-colored elongated shape, similar to a balloon.",
  },
  {
    date: "2016-02",
    title: "Beamforming for Transaural Audio (MA Thesis)",
    href: mathesis,
    body: "A mixed, array-based speaker system, where traditional LSFI beamforming and path estimation are simultaneously employed in their respective comfortable frequency range.",
    image: beamformImg,
    imageAlt:
      "A computer plot, showing the pattern of a speaker array, showing the angle on the x-axis, frequency on the y-axis and the amplitude as color. A dark and bright corridor can be seen at marked locations.",
  },
  {
    date: "2016-01",
    title: "Polygon Waveform Synthesis",
    href: "https://quod.lib.umich.edu/cgi/p/pod/dod-idx/continuous-order-polygonalwaveform-synthesis.pdf?c=icmc;idno=bbp2372.2016.104;format=pdf",
    body: "A method of generating musical waveforms which relies on sampling a variable polygon in polar space with a rotating phasor.",
    image: polygonImg,
    imageAlt: "An abstract shape next to a repeating pattern.",
  },
  {
    date: "2015-11",
    title: "SHFT @ Grey Area",
    href: "https://immersivelab.zhdk.ch/?page_id=3029",
    body: "Interactive AV installation for ZHDK's Immersive Lab installation, featuring 360 deg projection, multi-user interaction and 16 channel spatialisation.",
    image: shftImg,
    imageAlt:
      "A screenshot of abstract objects against a dark background, with one bright surface.",
  },
  {
    date: "2015-08",
    title: "HapticWave",
    href: "http://dl.acm.org/citation.cfm?id=2929469",
    body: "Designed and tested the hard/software of a prototype that delivers directional haptic cues to your hand to augment VR.",
    image: hapticwaveImg,
    imageAlt:
      "A person sitting wearing VR goggles, sitting in front of a computer, with their hand placed on metal plate. The screen of the computer is showing a virtual representation of the same screne.",
  },
  {
    date: "2014-05",
    title: "Coloration in Wave Field Synthesis (BA Thesis)",
    href: bathesis,
    body: "Investigated the perceived coloration of a synthesized point source presented by stereophony and Wave Field Synthesis using between 14 and 3584 speakers.",
    image: colorationImg,
    imageAlt:
      "A computer plot of a ring of white speaker, some of which are darker. The background is a color pattern that is concentrated around the gray speakers and fades to white. Several positions inside the circle are marked with an 'x'.",
  },
];
---

<ul class="link-card-grid">
  {projects.map((p) => <Card {...p} />)}
</ul>

<style>
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(33ch, 1fr));
    gap: 1rem;
    padding: 0;
    margin: 0;
  }
</style>
